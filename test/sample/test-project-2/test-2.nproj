#CSON

require: 
  "@type": "require"
  "include-dirs": ["src"]
  targets: ["main", "module-1"]
  "file-exts": ["coffee", "js"]
  "output-dir": "int-dir"
  enumerate: "plain"
  "remove-lines": yes

coffee: 
  "@type": "coffee"
  targets: ["int-dir/main.coffee"]
  options: 
    bare: yes
    utilities: no
  remove: yes

less: 
  "@type": "less"
  targets: ["styles/app.less"]
  "include-dirs": ["styles"]
  "output-dir": "output"
  compress: no
  
"coffee-template":
  "@type": "coffee-template"
  target: "config/config.coffee.cstpl"
  params: 
    "api-hostname":       "la.sl.me"
    "api-domain":         "la.sl.me"
    "search-domain":      "ls.sl.me"
    "site-domain":        "l.sl.me"
    "mapquest-api-key":   "Fmjtd%7Cluua29uy29%2Cb2%3Do5-hwygu"

clean: 
  "@type": "remove"
  items: ["int-dir", "output"]
