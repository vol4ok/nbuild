{
  "require": {
    "@type": "require",
    "include-dirs": [ "src" ],
    "targets": [ "main", "module-1" ],
    "file-exts": [ "coffee", "js" ],
    "output-dir": "int-dir",
    "enumerate": "plain",
    "remove-lines": true
  },
  "coffee": {
    "@type": "coffee",
    "targets": [ "int-dir/main.coffee" ],
    "options": { "bare": true, "utilities": false },
    "remove": true
  },
  "less": {
    "@type": "less",
    "targets": [ "styles/app.less"  ],
    "include-dirs": [ "styles" ],
    "output-dir": "output",
    "compress": false
  },
  "clean": {
    "@type": "remove",
    "items": [ "int-dir", "output" ]
  }
}